<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/button_foreground_round_10dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/simple_list_item_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:visibility="invisible"
        android:background="@drawable/round_keyboard_arrow_right_24" />

    <TextView
        android:id="@+id/simple_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="@color/black_text"
        android:text="" />
</LinearLayout>