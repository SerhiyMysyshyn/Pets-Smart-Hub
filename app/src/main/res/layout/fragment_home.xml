<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                app:cardBackgroundColor="@color/navigation_bar_background"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/hubWiFiConnectionIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/baseline_wifi_off_24"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:id="@+id/hubNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="16dp"
                            android:gravity="center"
                            android:text="@string/smart_hub_name"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/hubBatteryIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginRight="16dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/baseline_battery_4_bar_24"
                            android:backgroundTint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:text="@string/water_level"
                                    android:textColor="@color/lime" />

                                <ProgressBar
                                    android:id="@+id/waterLevelProgress"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="16dp"
                                    android:progress="100"
                                    android:progressDrawable="@drawable/vertical_dash_progressbar" />

                                <TextView
                                    android:id="@+id/waterLevelProgressText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-48dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="100%"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:text="@string/feed_level"
                                    android:textColor="@color/lime" />

                                <ProgressBar
                                    android:id="@+id/feedLevelProgress"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="16dp"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/vertical_dash_progressbar" />

                                <TextView
                                    android:id="@+id/feedLevelProgressText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-48dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="50%"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/lockHubButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/green_round_button_background"
                                android:foreground="@drawable/button_foreground_8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/lockHubButtonImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:visibility="visible"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/baseline_lock_24" />

                                <ProgressBar
                                    android:id="@+id/lockHubButtonProgress"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:visibility="invisible"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="-24dp"
                                    android:indeterminateTint="@color/black" />

                                <TextView
                                    android:id="@+id/lockHubButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:text="@string/lock_hub" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/setFeedingButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/green_round_button_background"
                                android:foreground="@drawable/button_foreground_8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/setFeedingButtonImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/baseline_feeding_24" />

                                <TextView
                                    android:id="@+id/setFeedingButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:text="@string/feeding" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/hubCameraButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/green_round_button_background"
                                android:foreground="@drawable/button_foreground_8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/hubCameraButtonImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/baseline_linked_camera_24" />

                                <TextView
                                    android:id="@+id/hubCameraButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:text="@string/hub_camera" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/hubSettingsButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/green_round_button_background"
                                android:foreground="@drawable/button_foreground_8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/hubSettingsButtonImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/baseline_settings_24" />

                                <TextView
                                    android:id="@+id/hubSettingsButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColor="@color/black"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:text="@string/hub_settings" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/navigation_bar_background"
                app:cardCornerRadius="16dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="@string/hub_sensors_data" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/pourFeedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/green_round_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/button_foreground_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pourFeedButtonImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/baseline_feeding_24"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/pourFeedButtonProgress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-24dp"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/black" />

                    <TextView
                        android:id="@+id/pourFeedButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/pour_feed"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pourWaterButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:background="@drawable/green_round_button_background"
                    android:foreground="@drawable/button_foreground_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pourWaterButtonImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:background="@drawable/baseline_water_drop_24" />

                    <ProgressBar
                        android:id="@+id/pourWaterButtonProgress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-24dp"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/black" />

                    <TextView
                        android:id="@+id/pourWaterButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:text="@string/pour_water" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>